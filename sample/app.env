# Sample environment file with paths
APP_ROOT=/var/www/myapp
DATA_DIR=/data/application
LOG_FILE=/var/log/app.log
CONFIG_PATH=/etc/myapp/config.ini
BACKUP_DIR=/backup/daily
TEMP_DIR=/tmp/app-cache
UPLOAD_PATH=/uploads/user-files
STATIC_FILES=/var/www/html/static
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key

# Windows paths
WINDOWS_APP_DIR=C:\Program Files\MyApp
WINDOWS_DATA_DIR=C:\ProgramData\MyApp
WINDOWS_USER_DIR=C:\Users\%USERNAME%\AppData\Local\MyApp

# Relative paths
RELATIVE_SRC=./src
RELATIVE_DIST=./dist
RELATIVE_ASSETS=./assets
PARENT_DIR=../parent-folder
NESTED_PATH=./config/production/settings

# User home paths
USER_CONFIG=~/.myapp/config
USER_DATA=~/Documents/MyApp
USER_CACHE=~/.cache/myapp